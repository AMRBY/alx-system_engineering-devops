#!/usr/bin/env bash
#redirection config

apt-get -y install nginx
echo "Hello World!" > /var/www/html/index.html
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;
    location /redirect_me {
        return 301 https://x.com/ayaelas;
    }
}" > /etc/nginx/sites-available/default
service nginx restart
